<%- include('../partials/headAndNav', {pageName: "Updating " + monToEdit.name}) %>

    <h1>Edit <%= monToEdit.name %></h1>
    <form method="POST" action="/pokemon/<%= monToEdit._id %>?_method=PUT">
        <div>
            <label for="name">Update Pokemon's Name</label>
            <input type="text" name="name" id="name" value=<%= monToEdit.name%>>
        </div>
        <div>
            <label for="image">Update Pokemon's Image URL</label>
            <input type="text" name="image" id="image" value=<%= monToEdit.image %>>
        </div>
        <div>
            <label for="power">Update Pokemon Type</label>
            <input type="text" name="power" id="power" value=<%= monToEdit.power %>>
        </div>
        <input type="submit" value="Edit <%= monToEdit.name %>">
    </form>

<%- include('../partials/footer') %>